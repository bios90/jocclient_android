<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.justordercompany.client.base.data_binding.BuilderBg" />

        <import type="com.justordercompany.client.R" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date"
            style="@style/TvReg.M"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="left"
            android:paddingTop="16dp"
            android:paddingBottom="4dp"
            android:textColor="@color/gray5"
            tools:text="22 janvar 2019" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@id/tv_date"
            android:background="@{BuilderBg.getSimpleDrawableRipple(4f,R.color.white,R.color.gray1)}"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:cardCornerRadius="4dp"
            app:cardElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="8dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="20dp"
                        app:civ_circle_background_color="@color/white" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/TvBold.Xl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"
                        android:textColor="@color/gray7"
                        tools:text="Stumptown cofeee" />

                    <TextView
                        android:id="@+id/tv_adress"
                        style="@style/TvReg.S"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:textColor="@color/gray4"
                        tools:text="Moscow, Esenina 15" />

                    <TextView
                        android:id="@+id/tv_menu"
                        style="@style/TvReg.M"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="12dp"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:lines="2"
                        android:maxLines="2"
                        android:textColor="@color/gray6"
                        tools:text="Капучино, Латте, Сендвич с курицей, Круасан с Вишней" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/lal_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10">

                    <TextView
                        android:id="@+id/tv_time_title"
                        style="@style/TvReg.S"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:text="@string/time_plus_dots"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/TvBold.M"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_time_title"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="6dp"
                        android:textColor="@color/white"
                        tools:text="15:24" />

                    <TextView
                        style="@style/TvReg.S"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/tv_sum"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="@string/sum"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_sum"
                        style="@style/TvBold.M"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/white"
                        tools:text="245 р" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>