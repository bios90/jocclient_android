<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.justordercompany.client.R" />

        <import type="com.justordercompany.client.base.data_binding.BuilderBg" />

        <import type="android.graphics.drawable.GradientDrawable" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/lar_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-12dp"
            android:background="@{BuilderBg.getSimpleDrawableRipple(12f,R.color.gray0,R.color.gray4_trans_50)}"
            android:orientation="vertical"
            app:cardCornerRadius="12dp"
            app:cardElevation="20dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/lar_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_cafe_logo"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:elevation="20dp"
                        app:civ_circle_background_color="@color/white" />

                    <TextView
                        android:id="@+id/tv_cafe_name"
                        style="@style/TvBold.Xxl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@id/img_cafe_logo"
                        android:gravity="left"
                        android:textColor="@color/gray6"
                        tools:text="Stumptown" />

                    <TextView
                        android:id="@+id/tv_adress"
                        style="@style/TvReg.M"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_cafe_name"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@id/img_cafe_logo"
                        android:gravity="left"
                        android:textColor="@color/gray5"
                        tools:text="Esenina 15" />

                    <TextView
                        android:id="@+id/tv_clock"
                        style="@style/TvFawReg.L"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_adress"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@id/img_cafe_logo"
                        android:text="@string/faw_clock"
                        android:textColor="@color/gray4" />

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/TvBold.M"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_adress"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@id/tv_clock"
                        android:gravity="left"
                        android:textColor="@color/gray5"
                        tools:text="9:30 - 22:40" />

                </RelativeLayout>

                <View
                    android:id="@+id/divider_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/lar_top"
                    android:background="@color/gray1" />

                <TextView
                    android:id="@+id/tv_time_title"
                    style="@style/TvReg.L"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divider_1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="left"
                    android:text="@string/making_time"
                    android:textColor="@color/gray4" />

                <LinearLayout
                    android:id="@+id/lal_for_time"
                    android:layout_width="match_parent"
                    android:layout_height="168dp"
                    android:layout_below="@id/tv_time_title"
                    android:layout_marginTop="12dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="5" />

                    <com.aigestudio.wheelpicker.WheelPicker
                        android:id="@+id/spin_hours"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        app:wheel_curved="true"
                        app:wheel_cyclic="true"
                        app:wheel_item_text_color="@color/gray6"
                        app:wheel_selected_item_text_color="@color/orange" />

                    <com.aigestudio.wheelpicker.WheelPicker
                        android:id="@+id/spin_minutes"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        app:wheel_curved="true"
                        app:wheel_cyclic="true"
                        app:wheel_item_text_color="@color/gray6"
                        app:wheel_selected_item_text_color="@color/orange" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="5" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_comment_title"
                    style="@style/TvReg.L"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lal_for_time"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="left"
                    android:text="@string/comment_for_order"
                    android:textColor="@color/gray4" />

                <com.justordercompany.client.ui.custom_views.MyEtWithObserv
                    android:id="@+id/et_comment"
                    style="@style/EditText.Multiline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_comment_title"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@{BuilderBg.getStrokedEtBg()}" />

                <LinearLayout
                    android:id="@+id/tv_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_comment"
                    android:background="@color/white"
                    android:elevation="20dp"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="28dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TvReg.Xl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sum"
                            android:textColor="@color/gray6" />

                        <TextView
                            android:id="@+id/tv_sum"
                            style="@style/TvBold.Xl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray6"
                            tools:text="502 Ñ€" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_make_order"
                        style="@style/TvBold.Xl"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="12dp"
                        android:background="@{BuilderBg.getGradOrange(4f,GradientDrawable.Orientation.BL_TR)}"
                        android:text="@string/make_pay"
                        android:textColor="@color/white" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>
