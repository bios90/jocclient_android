<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.justordercompany.client.R" />

        <import type="com.justordercompany.client.base.data_binding.BuilderBg" />

        <import type="android.graphics.drawable.GradientDrawable" />
    </data>

    <com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
        android:id="@+id/la_swipe"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:contentView="@id/cv_content"
        app:rightMenuView="@id/lal_right">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@{BuilderBg.getSimpleDrawableRipple(4f,R.color.white,R.color.gray4_trans_50)}"
            android:orientation="vertical"
            app:cardCornerRadius="4dp"
            app:cardElevation="20dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_logo"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:elevation="20dp"
                    android:src="@drawable/img_cofee_test"
                    app:civ_circle_background_color="@color/white" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/TvBold.Xl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_toLeftOf="@id/tv_price"
                    android:layout_toRightOf="@id/img_logo"
                    android:gravity="left"
                    android:text="Какачино"
                    android:textColor="@color/gray7" />


                <TextView
                    android:id="@+id/tv_price"
                    style="@style/TvBold.L"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:clickable="false"
                    android:textColor="@color/gray7"
                    tools:text="120 р" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="4dp"
                    android:layout_toLeftOf="@id/tv_price"
                    android:layout_toRightOf="@id/img_logo"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TvReg.S"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/weight"
                            android:textColor="@color/gray4" />

                        <TextView
                            android:id="@+id/tv_weight"
                            style="@style/TvReg.M"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="middle"
                            android:singleLine="true"
                            android:text="@string/weight"
                            android:textColor="@color/gray6"
                            tools:text="200 мл." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TvReg.S"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sugar"
                            android:textColor="@color/gray4" />

                        <TextView
                            android:id="@+id/tv_sugar"
                            style="@style/TvReg.M"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="middle"
                            android:singleLine="true"
                            android:text="@string/weight"
                            android:textColor="@color/gray6"
                            tools:text="3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TvReg.S"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/milk"
                            android:textColor="@color/gray4" />

                        <TextView
                            android:id="@+id/tv_milk"
                            style="@style/TvReg.M"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="middle"
                            android:singleLine="true"
                            android:text="@string/weight"
                            android:textColor="@color/gray6"
                            tools:text="Обычное" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/lal_right"
            my_divider_color="@{R.color.transparent}"
            my_divider_size="@{6f}"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_delete"

                style="@style/TvFawSolid.L"
                android:textColor="@color/white"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:background="@{BuilderBg.getSimpleDrawableRipple(4f,R.color.red,R.color.red_dark)}"
                android:elevation="20dp"
                android:text="@string/faw_trash" />

            <TextView
                android:id="@+id/tv_edit"

                style="@style/TvFawSolid.L"
                android:textColor="@color/white"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:background="@{BuilderBg.getSimpleDrawableRipple(4f,R.color.orange_light,R.color.orange)}"
                android:elevation="20dp"
                android:text="@string/faw_pencil" />


        </LinearLayout>

    </com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>


</layout>
