<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.justordercompany.client.R" />

        <import type="com.justordercompany.client.base.data_binding.BuilderBg" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray8_trans_50"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_margin="24dp"
            android:background="@{BuilderBg.getRounded4White()}"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lal_anim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/la_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TvReg.M"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/enter_phone_number"
                        android:textColor="@color/gray6" />

                    <EditText
                        android:id="@+id/et_phone"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@{BuilderBg.getSimpleDrawable(2f,R.color.gray1)}"
                        android:gravity="center"
                        android:inputType="phone"
                        android:lines="1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/la_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_enter_sms_code"
                        style="@style/TvReg.M"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/enter_sms_code"
                        android:textColor="@color/gray6" />

                    <EditText
                        android:id="@+id/et_code"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@{BuilderBg.getSimpleDrawable(2f,R.color.gray1)}"
                        android:gravity="center"
                        android:lines="1" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_times"
                style="@style/TvFawSolid.Xl"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_margin="6dp"
                android:background="@{BuilderBg.getSquareRippleTransOrange()}"
                android:text="@string/faw_times"
                android:textColor="@color/gray6" />

            <TextView
                android:id="@+id/tv_send"
                style="@style/TvBold.M"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@{BuilderBg.getEmptyOrange(4f)}"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/send"
                android:textColor="@color/orange" />

        </RelativeLayout>

    </RelativeLayout>

</layout>
