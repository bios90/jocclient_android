<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.justordercompany.client.base.data_binding.BuilderBg" />

        <import type="com.justordercompany.client.R" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_fake_status"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:outlineProvider="none"
            android:translationZ="21dp" />

        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/view_fake_status"
            android:background="@color/white"
            android:elevation="20dp"
            app:stl_clickable="true"
            app:stl_customTabTextLayoutId="@layout/tv_tab"
            app:stl_customTabTextViewId="@id/tv_tv"
            app:stl_defaultTabTextAllCaps="false"
            app:stl_defaultTabTextHorizontalPadding="24dp"
            app:stl_defaultTabTextMinWidth="140dp"
            app:stl_defaultTabTextSize="14dp"
            app:stl_distributeEvenly="true"
            app:stl_dividerThickness="0dp"
            app:stl_indicatorAlwaysInCenter="false"
            app:stl_indicatorColor="@color/orange"
            app:stl_indicatorCornerRadius="0dp"
            app:stl_indicatorGravity="bottom"
            app:stl_indicatorInFront="true"
            app:stl_indicatorInterpolation="linear"
            app:stl_indicatorThickness="2dp"
            app:stl_indicatorWidth="auto"
            app:stl_indicatorWithoutPadding="false"
            app:stl_overlineThickness="0dp"
            app:stl_titleOffset="24dp"
            app:stl_underlineColor="@color/white"
            app:stl_underlineThickness="2dp" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_lists"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tabs" />

        <LinearLayout
            android:id="@+id/la_info_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray8_trans_50"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:translationZ="22dp">

            <LinearLayout
                android:id="@+id/la_searching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.github.ybq.android.spinkit.SpinKitView
                    android:id="@+id/spin_kit"
                    style="@style/SpinKitView.FadingCircle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    app:SpinKit_Color="@color/white" />

                <TextView
                    style="@style/TvLight.L"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/searching_your_location"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/la_blocked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/TvLight.L"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location_blocked_go_to_settings"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_to_settings"
                    style="@style/TvReg.L"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@{BuilderBg.getSimpleEmptyRipple(4f,R.color.white)}"
                    android:padding="10dp"
                    android:text="@string/settings"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>